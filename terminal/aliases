alias ls="ls --color=auto"
alias ll="ls -lh"
alias la="ls -Alh"
alias cl="clear; pwd; ls -lh"
alias alm="alsamixer"
alias translate="~/scripts/translate/translate.py"
alias process="~/scripts/processScan.sh"
alias view="vim -R"
alias headphones="bluetoothctl power on && bluetoothctl connect 54:B7:E5:86:53:01"
alias exti="exit"
alias music="mpd && exec ncmpcpp"

pacgit () {
	git clone "https://aur.archlinux.org/$1.git" ~/downloads/aur/$1
}

defscan () {
	scanimage -d hpaio:/usb/DeskJet_2130_series?serial=CN6BE4C1SG068Y --format=png --output-file $1 --mode Color
}

timer () {
	termdown $@
	play $HOME/audio/sounds/alarm.wav
}

# Common Typos
alias sl="ls --color=auto"
alias ivm="vim"

# Start a window manager
alias starti3="cp .xinitrc_i3 .xinitrc; startx"
alias startobx="cp .xinitrc_obx .xinitrc; startx"
alias startplasma="cp .xinitrc_kde .xinitrc; startx"
alias startsway="sway --unsupported-gpu"
alias home="~/.screenlayout/dpDual.sh && ~/scripts/dotfiles/setWallpaper.sh"
alias away="~/.screenlayout/single.sh && ~/scripts/dotfiles/setWallpaper.sh"

